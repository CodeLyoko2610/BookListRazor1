@page
@model BookListRazor1.Pages.BookList.CreateModel
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create new book</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div class="form-group row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-3">
                <label asp-for="NewBook.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="NewBook.Name" class="form-control" />
            </div>
            <span asp-validation-for="NewBook.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NewBook.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="NewBook.Author" class="form-control" />
            </div>
            <span asp-validation-for="NewBook.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NewBook.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="NewBook.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="NewBook.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />                
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>
