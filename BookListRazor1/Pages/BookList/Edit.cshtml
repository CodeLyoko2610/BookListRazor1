@page
@model BookListRazor1.Pages.BookList.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit book</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EditBook.Id" /> @*Only needed for getting the book id and not for editting*@
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EditBook.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="EditBook.Name" class="form-control" />
            </div>
            <span asp-validation-for="EditBook.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EditBook.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="EditBook.Author" class="form-control" />
            </div>
            <span asp-validation-for="EditBook.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EditBook.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="EditBook.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="EditBook.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}